@model IEnumerable<DevD.FutureMaterials.Models.TipoProduto>

@{
    ViewData["Title"] = "Tipos";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create" asp-controller="TipoProduto">Novo Tipo de Produto</a>
<table>
    <tr>
        <th>Id</th>
        <th>Descrição</th>
        <th>Comercializado</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <label>@item.Id</label>
            </td>
            <td>
                <label>@item.Descricao</label>
            </td>
            <td>
                <label>@item.Comercializado</label>
            </td>
            <td>
                <a asp-action="Details" asp-controller="TipoProduto" asp-route-id="@item.Id">Consultar</a>
                <a asp-action="Edit" asp-controller="TipoProduto" asp-route-id="@item.Id">Atualizar</a>
                <a asp-action="Delete" asp-controller="TipoProduto" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
    }
</table>