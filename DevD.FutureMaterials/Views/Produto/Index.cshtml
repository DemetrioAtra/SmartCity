@model IEnumerable<DevD.FutureMaterials.Models.ProdutoModel>

@{
    ViewData["Title"] = "Produtos";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create" asp-controller="Produto">Novo Produto</a>
<br />
<br />
<table>
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Características</th>
        <th>Preço Médio</th>
        <th>Logotipo</th>
        <th>Ativo</th>
        <th>Tipo de Produto</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <label>@item.Id</label>
            </td>
            <td>
                <label>@item.Nome</label>
            </td>
            <td>
                <label>@item.Caracteristica</label>
            </td>
            <td>
                <label>@item.PrecoMedio</label>
            </td>
            <td>
                <label>@item.Logotipo</label>
            </td>
            <td>
                <label>@item.Ativo</label>
            </td>
            <td>
                <label>@item.TipoProduto</label>
            </td>
            <td>
                <a asp-action="Details" asp-controller="Produto" asp-route-id="@item.Id">Consultar</a>
                <a asp-action="Edit" asp-controller="Produto" asp-route-id="@item.Id">Atualizar</a>
                <a asp-action="Delete" asp-controller="Produto" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
    }
</table>