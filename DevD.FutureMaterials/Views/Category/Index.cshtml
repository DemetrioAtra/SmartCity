@model IEnumerable<DevD.FutureMaterials.Models.CategoryModel>

@{
    ViewData["Title"] = "Categories";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create" asp-controller="Category">New Category</a>
<br />
<br />
@if (@TempData["message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["message"]
    </div>
}
<table>
    <tr>
        <th>Display Order</th>
        <th>Description</th>
        <th>Marketed</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <label>@item.DisplayOrder</label>
            </td>
            <td>
                <label><a>@item.Description</a></label>
            </td>
            <td>
                <label>@item.Marketed</label>
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.CategoryId">Edit</a>
                <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
    }
</table>