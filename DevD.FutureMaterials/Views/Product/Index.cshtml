@model IEnumerable<DevD.FutureMaterials.Models.ProductModel>

@{
    ViewData["Title"] = "Products";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create" asp-controller="Product">New Product</a>
<br />
<br />
<table>
    <tr>
        <th>Name</th>
        <th>Characteristics</th>
        <th>Midium Price</th>
        <th>Logo</th>
        <th>Active</th>
        <th>Category</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <label><a>@item.Name</a></label>
            </td>
            <td>
                <label>@item.Characteristic</label>
            </td>
            <td>
                <label>@item.MidPrice</label>
            </td>
            <td>
                <label>@item.Logo</label>
            </td>
            <td>
                <label>@item.Active</label>
            </td>
            <td>
                <label>@item.Category</label>
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>