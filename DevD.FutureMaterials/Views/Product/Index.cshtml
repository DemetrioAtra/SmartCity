@model IEnumerable<DevD.FutureMaterials.Models.ProductModel>

@{
    ViewData["Title"] = "Products";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create" asp-controller="Product">New Product</a>
<br />
<br />
<table>
    <tr>
        <th>Name</th>
        <th>Características</th>
        <th>Preço Médio</th>
        <th>Logotipo</th>
        <th>Ativo</th>
        <th>Category</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <label>@item.Name</label>
            </td>
            <td>
                <label>@item.Caracteristica</label>
            </td>
            <td>
                <label>@item.PrecoMedio</label>
            </td>
            <td>
                <label>@item.Logotipo</label>
            </td>
            <td>
                <label>@item.Ativo</label>
            </td>
            <td>
                <label>@item.TipoProduto</label>
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>